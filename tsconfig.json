{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "es2015"],
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/actions/*": ["app/_actions/*"],
      "@/constants/*": ["app/_constants/*"],
      "@/context/*": ["app/_context/*"],
      "@/components/*": ["app/_components/*"],
      "@/hooks/*": ["app/_hooks/*"],
      "@/mocks/*": ["app/_mocks/*"],
      "@/public/*": ["public/*"],
      "@/utils/*": ["app/_utils/*"]
    },
    "typeRoots": ["app/_types", "./node_modules/@types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
